<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Creative Header with diagonal design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E91E63"
        android:padding="20dp">

        <!-- Name with creative styling -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOHN DOE"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:letterSpacing="0.1" />

        <!-- Title with underline effect -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATIVE SOFTWARE DEVELOPER"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:letterSpacing="0.05" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/white"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Contact Info with icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ‰"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@email.com"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“±"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(555) 123-4567"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New York, NY"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Content Area with creative styling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Summary Section with creative border -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#FCE4EC"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABOUT ME"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#E91E63"
                    android:background="@android:color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experienced software developer with 5+ years of experience in mobile and web development. Passionate about creating innovative solutions and working with cutting-edge technologies."
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.5" />

            </LinearLayout>

            <!-- Experience Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPERIENCE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#E91E63"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

                <LinearLayout
                    android:id="@+id/ll_experience_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- Experience items will be added here dynamically -->

                </LinearLayout>

            </LinearLayout>

            <!-- Education Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDUCATION"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#E91E63"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

                <LinearLayout
                    android:id="@+id/ll_education_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- Education items will be added here dynamically -->

                </LinearLayout>

            </LinearLayout>

            <!-- Skills Section with creative layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#FCE4EC"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKILLS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#E91E63"
                    android:background="@android:color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

                <TextView
                    android:id="@+id/tv_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Java, Kotlin, Android, React Native, JavaScript, Python, SQL, Git"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <!-- Projects Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROJECTS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#E91E63"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

                <LinearLayout
                    android:id="@+id/ll_projects_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- Project items will be added here dynamically -->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
